#!/bin/bash

# declare vars
#==============
# colors
BLACK=$(tput setaf 0)
RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
YELLOW=$(tput setaf 3)
BLUE=$(tput setaf 4)
MAGENTA=$(tput setaf 5)
CYAN=$(tput setaf 6)
WHITE=$(tput setaf 7)

# reset to default bash text style
RESET=$(tput sgr0)

# make actual text bold
BOLD=$(tput bold)

# make background color on text
BOLD_MODE=$(tput smso)

# remove background color on text
EXIT_BOLD_MODE=$(tput rmso)

# export vars
#=============
export BLACK
export RED
export GREEN
export YELLOW
export BLUE
export MAGENTA
export CYAN
export WHITE
export RESET
export BOLD
export BOLD_MODE
export EXIT_BOLD_MODE